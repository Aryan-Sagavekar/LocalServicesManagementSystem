<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

  <!-- Outer Border -->
  <item
    android:left="5dp"
    android:bottom="5dp"
    android:top="5dp"
    android:right="5dp">
    <shape android:shape="rectangle">
      <solid android:color="#000000" /> <!-- Blue color -->
      <corners android:radius="10dp" /> <!-- Rounded corners -->
      <stroke
        android:color="#000000"
        android:width="2dp" />
    </shape>
  </item>

  <item
    android:left="10dp"
    android:bottom="10dp"
    android:top="10dp"
    android:right="10dp">
    <shape android:shape="rectangle">
      <solid android:color="#5A5A5A"/>
      <corners android:radius="10dp"/>
    </shape>
  </item>

</layer-list>
