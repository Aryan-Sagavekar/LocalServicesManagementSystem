<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gr279_1500_800"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:background="#50FFFFFF"
        android:drawableLeft="@drawable/baseline_person_outline_24"
        android:drawablePadding="12dp"
        android:hint="@string/username"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        android:textColorHint="#D1D1D1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />
    <EditText
      android:id="@+id/password"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:layout_marginLeft="48dp"
      android:layout_marginRight="48dp"
      android:background="#50FFFFFF"
      android:hint="@string/password"
      android:inputType="textPassword"
      android:padding="12dp"
      android:textColorHint="#D1D1D1"
      android:drawableLeft="@drawable/baseline_password_24"
      android:drawablePadding="12dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/username" />
    <Button
      android:id="@+id/buttonLogin"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/password"
      android:layout_marginTop="20dp"
      android:layout_marginLeft="80dp"
      android:layout_marginRight="72dp"
      android:backgroundTint="#000000"
      android:alpha="0.7"
      android:text="@string/login"
      android:textColor="#FFFFFF"
      android:textSize="16sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/password" />
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:layout_marginLeft="10dp"
      android:text="@string/forgot"
      android:textColor="#D1D1D1"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/buttonLogin" />
    <TextView
        android:id="@+id/switchSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign"
        android:layout_marginBottom="20sp"
        android:layout_marginRight="40sp"
        android:textColor="#D1D1D1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/signTextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="@string/signinswitch"
        android:textColor="#D1D1D1"
        app:layout_constraintBottom_toBottomOf="@+id/switchSign"
        app:layout_constraintStart_toEndOf="@+id/switchSign"
        app:layout_constraintTop_toTopOf="@+id/switchSign"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_marginTop="100dp"
        android:layout_width="245dp"
        android:layout_height="128dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/app_logoooo" />
</androidx.constraintlayout.widget.ConstraintLayout>