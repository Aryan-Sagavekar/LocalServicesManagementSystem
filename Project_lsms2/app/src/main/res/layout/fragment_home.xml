<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#C7F0FF"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  >

    <!-- Search Bar -->

    <LinearLayout
        android:id="@+id/discoverServices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="12dp"

        android:elevation="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/discover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TopBar"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/josefinsansbold"
            android:text="Discover"
            android:textColor="#5B5B5B"
            android:textSize="28sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/Services_view"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@+id/discover"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/discoverServices"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@drawable/colour_custom2"
            android:elevation="6dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/josefinsansbold"
                android:paddingTop="10dp"
                android:text="Trending"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@drawable/colour_custom2"
            android:elevation="6dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:paddingTop="10dp"
                android:fontFamily="@font/josefinsansbold"
                android:text="Something"
                android:textSize="24sp" />

        </LinearLayout>
    </LinearLayout>



</RelativeLayout>
